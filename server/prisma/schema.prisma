generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int              @id @default(autoincrement())
  name            String?
  email           String           @unique
  password        String
  role            String
  phone           String?
  reviews         Review[]
  displacedGroups DisplacedGroup[]
}

model City {
  id     Int     @id @default(autoincrement())
  name   String
  houses House[]
}

model Coordinate {
  id        Int     @id @default(autoincrement())
  latitude  Float
  longitude Float
  houses    House[]
}

model House {
  id           Int        @id @default(autoincrement())
  adress       String
  numPlaces    Int
  details      String?
  cityId       Int
  coordinateId Int
  reviews      Review[]
  city         City       @relation(fields: [cityId], references: [id], onDelete: Cascade)
  coordinate   Coordinate @relation(fields: [coordinateId], references: [id], onDelete: Cascade)
}

model Review {
  id      Int     @id @default(autoincrement())
  userId  Int
  text    String?
  rate    Int?
  houseId Int
  house   House   @relation(fields: [houseId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model DisplacedGroup {
  id           Int           @id @default(autoincrement())
  status       String
  userId       Int
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  privileges   Privilege[]
  groupMembers GroupMember[]
}

model GroupMember {
  id               Int            @id @default(autoincrement())
  name             String
  surname          String
  middleName       String
  age              Int
  displacedGroupId Int
  displacedGroup   DisplacedGroup @relation(fields: [displacedGroupId], references: [id], onDelete: Cascade)
}

model Privilege {
  id              Int              @id @default(autoincrement())
  name            String
  displacedGroups DisplacedGroup[]
}
