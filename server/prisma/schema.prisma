generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int              @id @default(autoincrement())
  name            String?
  email           String           @unique
  password        String
  role            String
  phone           String?
  reviews         Review[]
  displacedGroups DisplacedGroup[]
}

model City {
  id     Int     @id @default(autoincrement())
  name   String
  houses House[]
}

model Coordinate {
  id        Int     @id @default(autoincrement())
  latitude  Float
  longitude Float
  houses    House[]
}

model House {
  id           Int        @id @default(autoincrement())
  adress       String
  numPlaces    Int
  cityId       Int
  coordinateId Int
  reviews      Review[]
  city         City       @relation(fields: [cityId], references: [id])
  coordinate   Coordinate @relation(fields: [coordinateId], references: [id])
}

model Review {
  id      Int     @id @default(autoincrement())
  userId  Int
  text    String?
  rate    Int?
  houseId Int
  house   House   @relation(fields: [houseId], references: [id])
  user    User    @relation(fields: [userId], references: [id])
}

model DisplacedGroup {
  id     Int  @id @default(autoincrement())
  userId Int
  user   User @relation(fields: [userId], references: [id])
}

model GroupMember {
  id         Int    @id @default(autoincrement())
  name       String
  surname    String
  middleName String
  age        Int
}

model Priviliges {
  id   Int    @id @default(autoincrement())
  name String
}
